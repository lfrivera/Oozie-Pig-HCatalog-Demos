#Remove oozie app.
hadoop fs -rm -r mean-max-temp-workflow-pig

#Copy oozie app.
hadoop fs -put /home/cloudera/Repositories/Git/Oozie-Pig-HCatalog-Demos/src/oozie/pig/mean-max-temp-workflow-pig mean-max-temp-workflow-pig

#Oozie server
export OOZIE_URL="http://localhost:11000/oozie"

#Run job
oozie job -config /home/cloudera/Repositories/Git/Oozie-Pig-HCatalog-Demos/src/oozie/pig/mean-max-temp-workflow-pig/workflow.properties -run

#Monitoring
http://localhost:11000/oozie 

#Results
hadoop fs -get pig-s2-out /home/cloudera/Repositories/Git/Oozie-Pig-HCatalog-Demos/ouput/test_oozie_pig
